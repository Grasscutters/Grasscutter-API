{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "build",
    "typeRoots": ["./src/types", "./mode_modules/@types"]
  },
  "exclude": [
    "node_modules"
  ]
}